<Window x:Class="MedocScanner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MedocScanner"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="800">
    <Window.Background>
        <ImageBrush ImageSource="Images/logo_small_icon_only.png" />
    </Window.Background>
    <StackPanel>
        <Menu IsMainMenu="True">
            <MenuItem Header="_Programme">
                <Separator/>
                <MenuItem x:Name ="Exit" Header="_Exit" Click="Exit_Click_1" />
            </MenuItem>
            <MenuItem Header="Connexion">
                <MenuItem x:Name="Login" Header="se connecter"  Click="Login_Click"/>
                
            </MenuItem>
            
        </Menu>
       
        
    </StackPanel>
</Window>
