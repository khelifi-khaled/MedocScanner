<Window x:Class="MedocScanner.Views.ScannePatient"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MedocScanner.Views"
        mc:Ignorable="d"
        Title="ScannePatient" Height="100" Width="200">
    
    <StackPanel>
        <Label Content="BarCode:" HorizontalAlignment="Center"/>
        <TextBox x:Name="txtBarCode" Width="150" HorizontalAlignment="Center" KeyDown="txtBarCode_KeyDown" Text ="{Binding Path=PatientBarCode, UpdateSourceTrigger=PropertyChanged}"  />
    </StackPanel>
</Window>
